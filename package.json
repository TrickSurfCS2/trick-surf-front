{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "trick-surf",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "Ivan Kornilov",
    "email": "ivan.kornilov@nordclan.com",
    "url": "https://t.me/xsolncu"
  },
  "engines": {
    "node": ">=20.x",
    "pnpm": ">=8.x",
    "bun": ">=1.x"
  },
  "scripts": {
    "dev": "vite",
    "start": "node --loader ts-node/esm server/server.ts",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "------------------------------------------------------------------------------------------------------------": "",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "eslint \"./**/*.{ts,tsx}\" --fix",
    "lint:style": "stylelint \"./**/*.{css,sass,scss}\" --fix --allow-empty-input",
    "format": "prettier -w \"./**/*.{ts,tsx,json,scss,md}\"",
    "-------------------------------------------------------------------------------------------------------------": "",
    "test": "vitest --run test/",
    "test:watch": "vitest test/",
    "test:v8": "vitest run --coverage test/",
    "test:ui": "vitest --ui --open",
    "--------------------------------------------------------------------------------------------------------------": "",
    "postinstall": "husky install .husky"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@react-three/drei": "^9.84.2",
    "@react-three/fiber": "^8.14.2",
    "antd": "5.9.2",
    "axios": "1.5.0",
    "classnames": "2.3.2",
    "dayjs": "1.11.10",
    "express": "^4.18.2",
    "mobx": "6.10.2",
    "mobx-react-lite": "4.0.4",
    "prom-client": "^14.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.11.0",
    "react-router-dom": "6.16.0",
    "three": "^0.156.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "11.11.0",
    "@types/express": "^4.17.17",
    "@types/node": "20.6.3",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "@types/uuid": "9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-react": "4.0.4",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-unused-imports": "3.0.0",
    "happy-dom": "12.1.6",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "rollup-plugin-visualizer": "5.9.2",
    "stylelint": "15.10.3",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recommended-scss": "13.0.0",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2",
    "unplugin-auto-import": "0.16.6",
    "vite": "4.4.9",
    "vitest": "0.34.5"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{css,sass,scss,htm,html}": "stylelint --fix",
    "*": "prettier -w -u"
  }
}
